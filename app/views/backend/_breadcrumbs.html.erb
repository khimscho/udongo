<% if breadcrumb.any? %>
  <ul class="breadcrumbs">
    <li>
      <%= link_to backend_path do %>
        <i class="fi-home"></i>
      <% end %>
    </li>

    <% breadcrumb.each do |item| %>
      <% klass = (item == breadcrumb.all.last) ? 'current' : '' %>
      <li class="<%= klass %>">
        <%= link_to item[:name].to_s.html_safe, item[:link] %>
      </li>
    <% end %>
  </ul>
<% end %>
