<%= stylesheet 'backend/tagit/tagit-autocomplete' %>
<%= stylesheet 'backend/tagit/tagit' %>
<%= javascript 'backend/tagit.min' %>
<%= javascript 'backend/plugins/tagbox' %>
<%= javascript 'backend/tags' %>

<% hide_label ||= true %>
<% locale ||= params[:translation_locale] ? params[:translation_locale] : nil %>

<fieldset class="radius">
  <legend><%= t 'b.headings.tags' %></legend>

  <%= label_tag(:tags, t('b.tags'), class: 'control-label col-sm-2') unless hide_label %>
  <%= text_field_tag :tags, model.tags_string(locale), data: { tagbox: true, items_path: backend_tags_path, locale: locale, type: model.class.name, id: model.id, base_path: backend_tags_path } %>
</fieldset>

