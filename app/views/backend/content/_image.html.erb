<% if image.present? && image.file.present? %>
  <div class="thumbnail">
    <% if image.url.present? %><a href="<%= image.url %>"><% end %>

    <%= image_tag image.file, alt: '', class: 'img-responsive' %>

    <% if image.url.present? %></a><% end %>

    <% if image.caption.present? %>
      <div class="caption">
        <%= image.caption.html_safe %>
      </div>
    <% end %>
  </div>
<% end %>

<%= link_to bs_icon(:edit), edit_backend_content_image_path(image), data: { colorbox: true, colorbox_height: '550px', colorbox_width: '600px', colorbox_iframe: true }  %>
