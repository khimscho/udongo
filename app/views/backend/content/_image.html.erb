<% if object.present? && object.file.present? %>

  <% if object.url.present? %>
    <%= link_to object.url, class: 'th radius' do %>
      <%= image_tag object.file.url, alt: '' %>
    <% end %>

  <% else %>
    <%= image_tag object.file.url, alt: '' %>
  <% end %>

  <% if object.caption.present? %>
    <%= object.caption.html_safe %>
  <% end %>
<% end %>

<%= link_to icon(:pencil), edit_backend_content_image_path(object) %>
