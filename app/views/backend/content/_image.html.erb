<% if image.present? && image.file.present? %>

  <% if image.url.present? %>
    <%= link_to image.url, class: 'th radius' do %>
      <%= image_tag image.file.url, alt: '' %>
    <% end %>

  <% else %>
    <%= image_tag image.file.url, alt: '' %>
  <% end %>

  <% if image.caption.present? %>
    <%= image.caption.html_safe %>
  <% end %>
<% end %>

<%= link_to icon(:pencil), edit_backend_content_image_path(image) %>
