<% Udongo::Configs::FlexibleContent::BREAKPOINTS.each do |bp| %>
  <%=
    form.input(
      "width_#{bp}",
      as: :select,
      collection: options_for_column_widths,
      include_blank: false,
      wrapper_html: { hidden: !Udongo.config.flexible_content.allowed_breakpoint?(bp) }
    )
  %>
<% end %>
