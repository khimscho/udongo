<%= simple_form_for [:backend, @model] do |f| %>
  <div class="card">
    <div class="card-header">
      <%= t 'b.edit_text' %>
    </div>

    <div class="card-block">
      <%= f.input :content, as: :ckeditor, label: false %>
    </div>
  </div>

  <%= render 'backend/form_actions', cancel_url: content_path %>
<% end %>
