<%= render 'backend/breadcrumbs' %>

<% if @forms.any? %>
  <table class="table table-striped table-hover">
    <thead class="thead-inverse">
      <tr>
        <th><%= t 'b.identifier' %></th>
        <th>&nbsp;</th>
      </tr>
    </thead>

    <tbody>
      <% @forms.each do |f| %>
        <tr>
          <td><%= f.description %></td>
          <td class="text-xs-right">
            <%= link_to_edit [:backend, f] %>
            <%= link_to icon(:search), backend_form_submissions_path(f) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% else %>
  <p><%= t 'b.msg.no_items' %></p>
<% end %>
