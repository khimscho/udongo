<% breadcrumb.add @navigation.description, backend_navigations_path %>
<% breadcrumb.add t('b.edit'), edit_backend_navigation_item_path(@navigation, @model) %>
<!-- TODO add breadcrumb for the current item. Maybe create decorator for fetching the label -->
<!-- TODO this decorator method can also be used in the frontend nav_item.label nav_item.path -->
<%= render 'backend/breadcrumbs' %>

<%= simple_form_for @model, url: backend_navigation_item_path(@navigation, @model) do |f| %>
  <ul class="tabs">
    <li class="tab-title active">
      <%= link_to t('b.general'), '#' %>
    </li>
    <% Udongo.config.locales.each do |locale| %>
      <li class="tab-title"><%= link_to locale.upcase, edit_translation_backend_navigation_item_path(@navigation, @model, locale) %></li>
    <% end %>
  </ul>

  <div class="tabs-content">
    <fieldset class="radius">
      <legend><%= t 'b.page' %></legend>
      <%= f.input :page_id, collection: ::Page.order(:description).map { |p| [p.description, p.id] }, label: false, include_blank: true %>
    </fieldset>
  </div>

  <%= render 'backend/form_actions', cancel_url: backend_navigations_path %>
<% end %>
