<% breadcrumb.add @navigation.description, backend_navigations_path %>
<% breadcrumb.add t('b.edit'), edit_backend_navigation_item_path(@navigation, @model) %>
<!-- TODO add breadcrumb for the current item. Maybe create decorator for fetching the label -->
<!-- TODO this decorator method can also be used in the frontend nav_item.label nav_item.path -->
<%= render 'backend/breadcrumbs' %>

<%= simple_form_for(@translation, url: edit_translation_backend_navigation_item_path) do |f| %>
  <ul class="tabs">
    <li class="tab-title">
      <%= link_to t('b.general'), edit_backend_navigation_item_path(@navigation, @model) %>
    </li>

    <% Udongo.config.locales.each do |locale| %>
      <li class="tab-title <%= 'active' if params[:translation_locale] == locale %>">
        <%= link_to locale.upcase, edit_translation_backend_navigation_item_path(@navigation, @model, locale) %>
      </li>
    <% end %>
  </ul>

  <div class="row">
    <div class="large-12 columns">
      <fieldset class="radius">
        <legend><%= t 'b.msg.navigation.custom' %></legend>
        <%= f.input :title %>
        <%= f.input :path %>
      </fieldset>
    </div>
  </div>

  <%= render 'backend/form_actions', cancel_url: backend_navigations_path %>
<% end %>
