<ol class="breadcrumb">
  <li><%= link_to bs_icon(:home), backend_path %></li>
  <li><%= link_to t('b.navigations'), backend_navigation_items_path %></li>
  <li><%= t('b.nav.navigations.items.add') %></li>
</ol>

<%= render 'backend/form_errors', object: @model %>

<%= bootstrap_form_for([:backend, @model], layout: :horizontal) do |f| %>
  <div class="row tab-content">
    <div class="tab-pane active" id="general">
      <div class="col-lg-12">
        <div class="panel panel-default">
          <div class="panel-heading"><%= t 'b.headings.info' %></div>
          <div class="panel-body">
            <%= f.select :list_id, options(:navigation_list, label_field: :description, selected: params[:list_id]) %>
            <%= f.select :page_id, options(:page, label_field: :title, selected: @model.page_id) %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%= render 'backend/form_actions', cancel_url: backend_navigation_items_path %>
<% end %>
