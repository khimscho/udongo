<div class="row">
  <div class="large-8 columns">
    <fieldset class="radius">
      <legend><%= t 'b.headings.content' %></legend>
      <%= form.input :description %>
    </fieldset>

    <fieldset class="radius">
      <legend><%= t 'b.headings.page.parent' %></legend>
      <%= form.select :parent_id, @model.options_for_parents(selected: @model.parent_id), include_blank: true, hide_label: true %>
    </fieldset>
  </div>

  <div class="large-4 columns">
    <fieldset class="radius">
      <legend><%= t 'b.headings.status' %></legend>
      <%= form.input :visible %>
    </fieldset>
  </div>
</div>
