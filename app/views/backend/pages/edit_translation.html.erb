<% breadcrumb.add @model.description, edit_backend_page_path(@model) %>
<% breadcrumb.add t('b.edit'), edit_backend_page_path(@model) %>
<%= render 'backend/breadcrumbs' %>

<%= simple_form_for([:backend, @translation], url: edit_translation_backend_page_path) do |f| %>
  <ul class="tabs">
    <li class="tab-title">
      <%= link_to t('b.general'), edit_backend_page_path(@model) %>
    </li>

    <% Udongo.config.locales.each do |locale| %>
      <li class="tab-title <%= 'active' if params[:translation_locale] == locale %>">
        <%= link_to locale.upcase, edit_translation_backend_page_path(@model, locale) %>
      </li>
    <% end %>
  </ul>

  <div class="row">
    <div class="large-12 columns">
      <fieldset class="radius">
        <legend><%= t 'b.msg.pages.content' %></legend>

        <%= f.input :title %>
        <%= f.input :subtitle %>

        <%= render 'backend/content/rows', rows: @model.content_rows, model: @model, locale: params[:translation_locale] %>
      </fieldset>

      <%= render 'backend/tags', model: @model %>
      <%= render 'backend/seo_form', f: f %>
    </div>
  </div>

  <%= render 'backend/form_actions', cancel_url: backend_pages_path %>
<% end %>
