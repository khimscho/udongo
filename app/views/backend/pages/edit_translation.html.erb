<ol class="breadcrumb">
  <li><%= link_to bs_icon(:home), backend_path %></li>
  <li><%= link_to t('b.pages'), backend_pages_path %></li>
  <li><%= @model.description %></li>
</ol>

<%= render 'backend/form_errors', object: @translation %>

<ul class="nav nav-tabs with-margin">
  <li>
    <%= link_to t('b.general'), edit_backend_page_path %>
  </li>
  <% locales.each do |locale| %>
    <li class="<%= 'active' if params[:translation_locale] == locale %>">
      <%= link_to locale.upcase, edit_translation_backend_page_path(@translation, locale) %>
    </li>
  <% end %>
</ul>

<%= bootstrap_form_for([:backend, @translation], url: edit_translation_backend_page_path, layout: :horizontal) do |f| %>
  <div class="row tab-content">
    <div class="tab-pane active" id="general">
      <div class="col-lg-12">
        <div class="panel panel-default">
          <div class="panel-heading"><%= t 'b.headings.content' %></div>
          <div class="panel-body centered">
            <%= f.text_field :title %>
            <%= f.text_field :subtitle %>
            <%= f.text_area :content, class: 'form-control markdown', rows: 10 %>
            <%= render 'backend/markdown_preview', form: f, name: :content %>
          </div>
        </div>

        <%= render 'backend/tags', model: @model %>

        <%= render 'backend/seo_form', f: f %>
      </div>
    </div>
  </div>

  <%= render 'backend/form_actions', cancel_url: backend_pages_path %>
<% end %>
