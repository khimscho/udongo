<%= render 'backend/breadcrumbs' %>

<p class="text-right">
  <%= link_to icon(:plus, t('b.add')), new_backend_search_synonym_path, class: 'btn btn-primary btn-sm' %>
</p>

<% if @search_synonyms.any? %>
  <table class="table table-striped table-hover">
    <thead class="thead-inverse">
      <tr>
        <th><%= t 'b.locale' %></th>
        <th><%= t 'b.search_term' %></th>
        <th><%= t 'b.synonyms' %></th>
        <th>&nbsp;</th>
      </tr>
    </thead>

    <tbody>
      <% @search_synonyms.each do |s| %>
        <tr>
          <td><%= s.locale %></td>
          <td><%= s.term %></td>
          <td><%= s.synonyms %></td>
          <td class="text-right">
            <%= link_to_edit [:backend, s] %>
            <%= link_to_delete [:backend, s] %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= udongo_paginate @search_synonyms %>
<% else %>
  <p><%= t 'b.msg.no_items' %></p>
<% end %>
