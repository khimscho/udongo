<% if flash[:alert] %>
  <p><%= flash[:alert] %></p>
<% end %>

<%= form_tag backend_sessions_path do %>
  <div>
    <%= text_field_tag :email, nil, placeholder: t('b.email') %>
  </div>

  <div>
    <%= password_field_tag :password, nil, placeholder: t('b.password') %>
  </div>

  <div>
    <button type="submit" class="btn btn-primary"><%= t 'b.login' %></button>
  </div>
<% end %>

