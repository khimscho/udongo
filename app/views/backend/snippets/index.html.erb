<%= render 'backend/breadcrumbs' %>

<% if @snippets.any? %>
  <table class="table table-striped table-hover">
    <thead class="thead-inverse">
      <tr>
        <th><%= t 'b.description' %></th>
        <th>&nbsp;</th>
      </tr>
    </thead>

    <tbody>
      <% @snippets.each do |s| %>
        <tr>
          <td><%= s.description %></td>
          <td class="text-xs-right">
            <%= link_to_edit edit_translation_backend_snippet_path(s, default_app_locale) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% else %>
  <p><%= t 'b.msg.no_items' %></p>
<% end %>
