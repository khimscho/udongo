<%= render 'backend/breadcrumbs' %>
<%= render 'filter' %>

<p class="text-right">
  <%= link_to icon(:plus, t('b.add')), new_backend_tag_path, class: 'btn btn-primary btn-sm' %>
</p>

<% if @tags.any? %>
  <table class="table table-striped table-hover">
    <thead class="thead-inverse">
      <tr>
        <th><%= t 'b.name' %></th>
        <th><%= t 'b.locale' %></th>
        <th><%= t 'b.used' %></th>
        <th>&nbsp;</th>
      </tr>
    </thead>

    <tbody>
      <% @tags.each do |tag| %>
        <tr>
          <td><%= tag.name %></td>
          <td><%= tag.locale.to_s.upcase %></td>
          <!-- TODO note if already used and show usages in a popup? -->
          <td>gebruikt?</td>
          <td class="text-right">
            <%= link_to_edit [:backend, tag] %>
            <%= link_to_delete [:backend, tag] %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= udongo_paginate @tags %>
<% else %>
  <p><%= t 'b.msg.no_items' %></p>
<% end %>
